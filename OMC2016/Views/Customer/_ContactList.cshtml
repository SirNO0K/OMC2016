@model IEnumerable<OMC2016.Models.Customer.ContactList>

<br />
<div class="container">
    <table id="ContactList" style="width:100%" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("ชื่อ")
                </th>
                <th>
                    @Html.DisplayName("นามสกุล")
                </th>
                <th>
                    @Html.DisplayName("แผนก")
                </th>
                <th>
                    @Html.DisplayName("หมายเลขโทรศัพท์")
                </th>
                <th>
                    @Html.DisplayName("Email")
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelitem => item.NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.LNAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.JOB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.PHONE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.EMAIL)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var dtContactList = $('#ContactList').DataTable({
            searching: false,
            sort: false,
            autoWidth: true,
            lengthChange: false,
            bFilter: false,
        });
    });
</script>
