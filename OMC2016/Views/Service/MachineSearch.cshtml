@model IEnumerable<OMC2016.Models.Services.MachineList>
@{
    ViewBag.Title = "Machine Search";
}
<br />

<style>
    .panel-search {
        width: 120px;
    }

    .dataTables_filter {
        display: none;
    }
</style>

<div class="container-fluid hidden">
    <div class="panel panel-green panel-search " id="pnSearch">
        <div class="panel-heading">
            <button type="button" data-toggle="collapse" data-parent="#" href="#one" class="btn btn-success"><span class="fa fa-search"></span> Search</button>
        </div>


        <div id="one" class="panel-collapse collapse">
            <div class="panel-body">
                <div class="row">
                    <div class="form-horizontal">
                        <div class="col-md-2">
                            <input type="text" class="form-control" placeholder="Search by Serial" id="txtSerail" style="height:32px;">
                        </div>
                        <div class="col-md-2">
                            @Html.DropDownList("GroupCustomer", new List<SelectListItem> { new SelectListItem { Text = "-- Select Group --", Value = "0" } }, new { @class = "form-control", @placeholder = "Category" })
                        </div>
                        <div class="col-md-8">
                            <input type="text" class="form-control" placeholder="Search by Customer" id="txtCustomer" style="height:32px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                Machine List
            </h3>
        </div>

        <div class="panel-body">
            <table id="MachineList" class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>STATUS</th>
                        <th>CODE</th>
                        <th>NAME</th>
                        <th>MODEL</th>
                        <th>SN</th>
                        <th>START</th>
                        <th>EXPIRE</th>
                        <th>TRANSFER</th>
                        <th>REMARK</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("ดูรายละเอียด", "Detail", new { id = item.MIXID })
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.ISEXP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.CODE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.NAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.TYPE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.SN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.SALE_DATE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.EXP_DATE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.ISTRANSFER)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.REMARK)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<link href="~/Content/DataTables/css/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.min.js" type="text/javascript"></script>
<script>
    $(function () {
        $(document).ready(function () {
            $('.container-fluid').removeClass('hidden');

            $('#MachineList').DataTable({
                searching: true,
                sort: false,
                autoWidth: true,
                lengthChange: false,
                bFilter: false,
            });

            $('#pnSearch')
              .on('show.bs.collapse', function (a) {
                  $('#pnSearch').removeClass('panel-search');
              })
              .on('hidden.bs.collapse', function (a) {
                  $('#pnSearch').addClass('panel-search');
              });
        });
    });
</script>
